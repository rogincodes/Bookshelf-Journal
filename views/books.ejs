<%- include("partials/header.ejs")  %>

  <section class="journal">
    <div class="journal-cover">
      <img src="<%= lucky.img_url %>" alt="" class="random-cover">
      <h5>Recommendation: <%= lucky.rating %>/10</h5>
    </div>
    <div class="journal-details">
      <div class="scrollable-content">
        <h1><%= lucky.title %></h1>
        <h3><%= lucky.author %></h3>
        <h5><%= lucky.genre %></h5> 
        <h5><%= lucky.review %></h5>
        <h5><%= lucky.notes %></h5>
      </div>
    </div>
  </section>

  <!-- BOOKSHELF -->
  <% if (locals.featuredBooks[0]) {%>
    <h1>Other books by <span class="sub-title"></span></h1>
    <section class="bookshelf">
      <% for(let book of featuredBooks) {%>
        <div class="card">  
          <img src="<%= book.img_url %>" alt="" class="book-cover">
          <div class="book-details">
            <h1><%= book.title %></h1>
            <h3><%= book.author %></h3>
            <h4>Recomendation: <%= book.rating %>/10</h4>
          </div>
        </div>
      <% } %>
    </section>
  <% } else {}; %>

<%- include("partials/footer.ejs")  %>